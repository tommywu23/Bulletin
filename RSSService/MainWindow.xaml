<Window x:Class="RSSService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RSS源抓取服务" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <Border DockPanel.Dock="Bottom" BorderThickness="1" BorderBrush="Black">
                <StackPanel Height="50" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Margin="10" x:Name="startservice" Content="启动" Visibility="Collapsed" Width="75" Click="Start_Click" />
                    <Button Margin="10" x:Name="stopservice" Content="停止" Width="75" Click="Stop_Click" />
                    <Button Margin="10" Content="清空" Width="75" Click="Clear_Click" />
                </StackPanel>
            </Border>

            <TextBox x:Name="logbox" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto"></TextBox>
        </DockPanel>
    </Grid>
</Window>
